<div id="loginViewTemplate" ng-controller="LoginController">
  <ng-include src="'./app/components/menuBar/menuBarView.ejs'">
    <!-- Menu Bar -->
  </ng-include>
  <ng-include src="'./app/components/alert/alertView.ejs'">
    <!-- Alert message, if any -->
  </ng-include>
  <div class="row">
    <div class="col col-sm-3">

    </div>
    <div class="col col-sm-6">
      <form class="inputForm" name="loginForm" id="loginForm" action="javascript:void(0)">
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="text" class="form-control inputField" name="email" id="email" placeholder="i.e. johndoe@work.com" ng-model="user.email">
        </div>
        <div class="form-group">
          <label for="playground">Playground</label>
          <input type="text" class="form-control inputField" name="playground" id="playground" placeholder="i.e. 2019A.kariv" ng-model="user.playground">
        </div>
        <div ng-if="failedLogin">
          <div class="form-group">
            <label for="verificationCode">Verification Code</label>
            <input type="text" class="form-control inputField" name="verificationCode" id="verificationCode" placeholder="i.e. whynot" ng-model="user.verificationCode">
          </div>
        </div>
        <div class="form-group">
          <hr>
          <button class="btn btn-info submitButton" ng-click="login()">Login</button>
        </div>
      </form>  
    </div>
    <div class="col col-sm-3">
      
    </div>
  </div>
</div>